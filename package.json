{
  "name": "persik-tv-app",
  "version": "2.1.8",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "build": "ng build --configuration production",
    "build-lg": "npm run build && rm -rf ./platforms/webos/build && mkdir ./platforms/webos/build && cp -r ./dist/* ./platforms/webos/build/ && cp -r ./platforms/webos/resources/* ./platforms/webos/build/ && ares-package -o ./platforms/webos/build/ ./platforms/webos/build/",
    "build-samsung": "npm run build && rm -rf ./platforms/tizen/dist && mkdir ./platforms/tizen/dist && cp -r ./dist/* ./platforms/tizen/dist/ && npm run samsung-build-web && npm run samsung-package",
    "samsung-clear-cert": "tizen security-profiles remove -n persikby",
    "samsung-add-cert": "tizen security-profiles add -n persikby -a ./platforms/tizen/keystore/persikby.p12 -p persikby",
    "samsung-build-web": "cp -r ./platforms/tizen/src/* ./platforms/tizen/dist && tizen build-web -- ./platforms/tizen/dist",
    "samsung-package": "tizen package --type wgt --sign persikby -- ./platforms/tizen/dist/.buildResult",
    "samsung-copyres": "cp ./platforms/tizen/dist/.buildResult/TV BY Persik.wgt ./platforms/tizen/src/",
    "samsung-cleandir": "rm -rf ./platforms/tizen/dist",
    "build-android": "npm run build && rm -rf ./platforms/android/www/* && cp -r ./dist/* ./platforms/android/www && cd ./platforms/android && cordova build android",
    "android-sign": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore platforms/android/persik.keystore platforms/android/platforms/android/app/build/outputs/apk/release/app-release.apk persik",
    "android-sign-final": "zipalign -v 4 platforms/android/platforms/android/app/build/outputs/apk/release/app-release.apk platforms/android/platforms/android/app/build/outputs/apk/release/by.persik.androidtv.apk"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.2",
    "@angular/cdk": "^7.0.0",
    "@angular/common": "~13.1.2",
    "@angular/compiler": "~13.1.2",
    "@angular/core": "~13.1.2",
    "@angular/forms": "~13.1.2",
    "@angular/platform-browser": "~13.1.2",
    "@angular/platform-browser-dynamic": "~13.1.2",
    "@angular/router": "~13.1.2",
    "@ngrx/effects": "^13.0.2",
    "@ngrx/store": "^13.0.2",
    "@ngrx/store-devtools": "^13.0.2",
    "angular-epic-spinners": "^2.0.0",
    "angularx-qrcode": "^12.0.3",
    "core-js": "^2.5.4",
    "hls.js": "0.7.11",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "ngx-infinite-scroll": "^7.2.0",
    "rxjs": "~6.6.7",
    "scroll-into-view": "^1.9.7",
    "tslib": "^2.0.0",
    "update": "^0.7.4",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.2",
    "@angular/language-service": "~13.1.2",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "fs-extra": "^8.1.0",
    "fs-extra-promise": "^1.0.1",
    "grunt-cache-bust": "^1.7.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.10",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.5.4"
  }
}
